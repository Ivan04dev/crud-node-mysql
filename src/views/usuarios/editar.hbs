<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3 class="text-uppercase">Editar usuario</h3>
                    <div class="card-body">
                        <form action="/editar/{{usuario.id}}" method="post">
                            <div class="input-group">
                                <label for="nombre" class="input-group-text">Nombre</label>
                                <input class="form-control" type="text" name="nombre" placeholder="Tu nombre" value="{{usuario.nombre}}" >
                            </div>
                            <div class="input-group">
                                <label for="email" class="input-group-text">Email</label>
                                <input class="form-control" type="email" name="email" placeholder="Tu email" value="{{usuario.email}}" >
                            </div>
                            {{!-- Password opcional --}}
                            <div class="form-group mt-4 d-grid gap-2">
                                <input type="submit" value="Agregar" class="btn btn-success">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3 class="text-uppercase">Crear nuevo usuario</h3>
                    <div class="card-body">
                        <form action="/agregar" method="post">
                            <div class="input-group">
                                <label for="nombre" class="form-label">Nombre</label>
                                <input class="form-control" type="text" name="nombre" placeholder="Tu nombre" autofocus required>
                            </div>
                            <div class="input-group">
                                <label for="email" class="form-label">Email</label>
                                <input class="form-control" type="email" name="email" placeholder="Tu email" autofocus required>
                            </div>
                            <div class="input-group">
                                <label for="password" class="form-label">Password</label>
                                <input class="form-control" type="password" name="password" placeholder="Tu password" autofocus required>
                            </div>
                            <div class="form-group mt-4 d-grid gap-2">
                                <input type="submit" value="Agregar" class="btn btn-success">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>